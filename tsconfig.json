{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es5",
      "module": "commonjs",
      "rootDir": "src/",
      "outDir": "./dist",
      "strict": true,
      "lib": ["esnext"],
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "noImplicitAny": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}